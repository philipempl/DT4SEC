  journal   = {2020 IEEE International Workshop on Metrology for Industry 4.0 \& IoT},
  keywords  = {Integrated circuits;Digital twin;Standards organizations;Organizations;Smart grids;Security;Internet of Things;Smart Grid;IoT;Cybersecurity;Digital Twins},
