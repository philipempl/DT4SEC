  file   = {:data/pdfs/Sousa2021 - Elegant_ Security of Critical Infrastructures with Digital Twins.pdf:PDF},
  hash_id        = {15e0349218936e0fa66315181ec9434946ed123c37b7d10bf1787500377192d7,e0ec4745022757b904e2e6e5021627cf0b9d102f7acc3d12acc73a0d78b69928},
  keywords       = {Security;Digital twin;Monitoring;Integrated circuits;Process control;SCADA systems;Analytical models;Digital Twins;SCADA;pipelines;security;programmable logic controllers;DTaaS},
  relevance      = {relevant},
}

@Article{Srivastava2024,
