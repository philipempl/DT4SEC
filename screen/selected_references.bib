  doi    = {10.1016/j.cie.2021.107534},
  file   = {:data/pdfs/Colabianchi2021 - Discussing Resilience in the Context of Cyber Physical Systems.pdf:PDF},
  hash_id        = {6d10716f69f2266950be3cf51749a92e69fa032eb29b38a176a7f792c0e18317},
