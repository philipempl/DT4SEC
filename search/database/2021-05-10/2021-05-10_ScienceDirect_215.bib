  keywords = {Futures, Digital technology, Digital transformation, Social impact, Autonomous technology, Artificial intelligence},
  url      = {https://www.sciencedirect.com/science/article/pii/S0040162520310003},
}

@Article{Inkinen2021,
  author   = {Tommi Inkinen and Reima Helminen and Janne Saarikoski},
  journal  = {Research in Transportation Business & Management},
  title    = {Technological trajectories and scenarios in seaport digitalization},
