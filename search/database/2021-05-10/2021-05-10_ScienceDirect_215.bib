@Article{Samad2020,
  author   = {Tariq Samad and Margret Bauer and Scott Bortoff and Stefano {Di Cairano} and Lorenzo Fagiano and Peter Fogh Odgaard and R. Russell Rhinehart and Ricardo Sánchez-Peña and Atanas Serbezov and Finn Ankersen and Philippe Goupil and Benyamin Grosman and Marcel Heertjes and Iven Mareels and Raye Sosseh},
