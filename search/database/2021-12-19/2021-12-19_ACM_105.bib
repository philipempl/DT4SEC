pages = {88–97},
numpages = {10},
location = {Porto, Portugal},
series = {ICCPS '18}
}

@article{10.1145/3478680,
author = {Siqueira, Frank and Davis, Joseph G.},
title = {Service Computing for Industry 4.0: State of the Art, Challenges, and Research Opportunities},
