@inproceedings{10.1145/3462203.3475925,
author = {Cecilia, Jos\'{e} M. and Manzoni, Pietro and Trolle, Dennis and Nielsen, Anders and Blanco, Pablo and Prandi, Catia and Pe\~{n}a-Haro, Salvador and Barkved, Line and Pierson, Don and Senent, Javier},
title = {SMARTLAGOON: Innovative Modelling Approaches for Predicting Socio-Environmental Evolution in Highly Anthropized Coastal Lagoons},
year = {2021},
isbn = {9781450384780},
publisher = {Association for Computing Machinery},
address = {New York, NY, USA},
url = {https://doi.org/10.1145/3462203.3475925},
doi = {10.1145/3462203.3475925},
abstract = {Coastal lagoons are ecosystems with significant environmental and socio-economic value. However, these natural systems are especially vulnerable to climatic and anthropogenic pressures, such as intensive agriculture and extensive urbanization as a consequence of the tourist development. Despite the vulnerability and complexity of these ecosystems, there has been limited development of novel techniques which can provide real-time monitoring, analysis and management of these critical resources. Beyond being useful for policy-making procedures at multiple levels of granularity, such tools can increase local and citizen awareness of environmental impacts. This paper introduces the key concept behind the SMARTLAGOON project, which intends to develop a digital twin to build a systemic understanding of the socio-environmental inter-relationships affecting coastal lagoons and their ecosystem. Particularly, we focus on the main research activities carried out since the beginning of the project (January 1st, 2021), which are mainly based on initial mapping and reporting of the main stakeholders' needs and wishes in relation to the technological products to be developed in SMARTLAGOON. This will onset the initial development pathway, while additional stakeholder inputs during the project lifetime will help to further explore and prioritize the key developments, thus maximizing the relevance and impact of the Mar Menor's digital twin.},
booktitle = {Proceedings of the Conference on Information Technology for Social Good},
pages = {204–209},
numpages = {6},
keywords = {Citizen Science, SMARTLAGOON, Digital Twin, Environmental Intelligence},
location = {Roma, Italy},
series = {GoodIT '21}
}

@inproceedings{10.1145/3424978.3425033,
author = {Yan, Qiong and Zhang, Haijun},
title = {Real-Time Multi-Agent-Based Decision-Making Approach for Dynamic Machine Tool Selection Problem},
year = {2020},
isbn = {9781450377720},
publisher = {Association for Computing Machinery},
address = {New York, NY, USA},
url = {https://doi.org/10.1145/3424978.3425033},
doi = {10.1145/3424978.3425033},
abstract = {With the development of information communication technology, intelligent manufacturing is one of the trends of manufacturing industry. Machine tool should be digital and intelligent, providing some manufacturing service via the Internet of Things. In order to solve the dynamic machine tool selection (DMTS), this paper proposes a novel decision-making approach based on real-time multi-agent. Firstly, the machine tool digital twin (MTDT) is introduced to provide real-time device data for evaluating machine tools. Based on MTDT, a real-time multi-agent-based mechanism (RTMAM) is designed for solving DMTS. Then based on exponential scale, the Analytic Hierarchy Process is modified for calculating the weight of evaluation index. The evaluation model of machine tool is solved by Reference Ideal Method (RIM). Finally, the proposed decision-making approach for DMTS is tested in an aviation plant.},
booktitle = {Proceedings of the 4th International Conference on Computer Science and Application Engineering},
articleno = {55},
numpages = {6},
keywords = {Multi-agent, Digital twin, Machine tool selection, Reference ideal method},
location = {Sanya, China},
series = {CSAE 2020}
}

@inproceedings{10.1145/3307363.3307370,
author = {Kuehn, Wolfgang},
title = {Simulation in Digital Enterprises},
year = {2019},
isbn = {9781450366199},
publisher = {Association for Computing Machinery},
address = {New York, NY, USA},
url = {https://doi.org/10.1145/3307363.3307370},
