@inproceedings{10.1145/3131542.3140265,
author = {Mandl, Bernhard and Stehling, Marius and Schmiedinger, Thomas and Adam, Martin},
title = {Enhancing Workplace Learning by Augmented Reality},
year = {2017},
isbn = {9781450353182},
publisher = {Association for Computing Machinery},
