@article{ADIL2021103311,
title = {Emerging IoT Applications in Sustainable Smart Cities for COVID-19: Network Security and Data Preservation Challenges with Future Directions},
journal = {Sustainable Cities and Society},
volume = {75},
pages = {103311},
year = {2021},
