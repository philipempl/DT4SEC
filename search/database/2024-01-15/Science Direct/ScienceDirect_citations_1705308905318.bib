author = {M. Hanefi Calp and Resul Bütüner},
keywords = {Society 5.0, Industry 4.0, Smart society, Artificial intelligence, Technology},
abstract = {Industrial revolutions take place because of rapid development of information, technology, and social life. New possibilities, opportunities, and advantages come to the fore economically, sociologically, and demographically for institutions or organizations with these revolutions. Each revolution has great healing or facilitating effects, depending on the conditions of the era. The latest revolution, Society 5.0, is one such example. Society 5.0 focuses on making more use of technologies such as artificial intelligence (AI), cyber-physical systems, autonomous robots, 3D printers, cloud computing, and more, all of which are components of Industry 4.0. The purpose of these technologies is to improve living conditions and ensure social development and a sustainable level of welfare by taking into account the interests of society. In short, it is the provision of effective technologies for smart societies. In this chapter, we examine in detail the concept of Society 5.0 and its relationship with AI. We begin by reviewing existing literature on the topic. Then, we discuss and describe the previous industrial revolutions up to this era of Industry 4.0. We also define the concept of Society 5.0, its relationship with AI, its goals and innovations, and challenges to its implementation. We end the chapter with conclusions and directions for future research.}
}
@article{GORDON2018262,
title = {Meeting The Needs of Industry in Smart Manufacture – The Definition of a New Profession and a Case Study in Providing the Required Skillset},
