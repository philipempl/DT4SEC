@article{PEKARIC2023111716,
title = {A systematic review on security and safety of self-adaptive systems},
journal = {Journal of Systems and Software},
volume = {203},
pages = {111716},
year = {2023},
issn = {0164-1212},
doi = {https://doi.org/10.1016/j.jss.2023.111716},
