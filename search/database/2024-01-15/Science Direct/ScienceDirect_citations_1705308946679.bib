doi = {https://doi.org/10.1016/j.telpol.2023.102678},
url = {https://www.sciencedirect.com/science/article/pii/S0308596123001891},
author = {Hyunjin Shin and Sanghyun Park and Leehee Kim and Jinseob Kim and Taeeun Kim and Youngkeun Song and Sungjoo Lee},
