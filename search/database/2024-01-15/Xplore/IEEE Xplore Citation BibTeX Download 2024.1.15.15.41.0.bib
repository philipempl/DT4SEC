  ISSN={},
  month={Nov},}@ARTICLE{9994243,
  author={Zhang, Lin and Wan, Haochuan and Zheng, Xianhua and Tian, Meizi and Liu, Yubao and Su, Lingling},
  journal={IEEE Transactions on Intelligent Transportation Systems}, 
  title={Digital-Twin Prediction of Metamorphic Object Transportation by Multi-Robots With THz Communication Framework}, 
  year={2023},
  volume={24},
  number={7},
  pages={7757-7765},
  abstract={To predict the transportation process of a class of metamorphic object, e.g., deformable interlink linear object (DLO), the system particularity and coupling complexity is much increased due to external metamorphic constraints compared with classic multi-robot manipulation system. To explore the coupling effect, a virtual DLO model described by wave PDE equations with velocity feedback is proposed for replacing external metamorphic constraints. Independent stability controller is designed for feedback control of virtual DLO from perspective of MSR considering model stabilization. With the integration of proposed virtual DLO model, a digital-twin prediction prototype system of metamorphic object transportation is established. To bridge the communication gap between physical and digital world, a THz communication-based system framework is proposed to implement the digital-twin prediction for extremely security-sensitive system. Both numeric simulation and industrial experiment prove the availability and feasibility.},
